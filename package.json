{
    "name": "busdriver",
    "displayName": "BusDriver",
    "description": "Manage Azure Service Bus queues and topics from VS Code",
    "version": "0.1.0",
    "publisher": "busdriver",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Azure",
        "Other"
    ],
    "icon": "resources/icon.png",
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "busdriver-explorer",
                    "title": "Service Bus",
                    "icon": "$(server)"
                }
            ]
        },
        "views": {
            "busdriver-explorer": [
                {
                    "id": "busdriver.connections",
                    "name": "Connections"
                }
            ]
        },
        "commands": [
            {
                "command": "busdriver.addConnection",
                "title": "Add Connection",
                "category": "BusDriver",
                "icon": "$(add)"
            },
            {
                "command": "busdriver.refresh",
                "title": "Refresh",
                "category": "BusDriver",
                "icon": "$(refresh)"
            },
            {
                "command": "busdriver.deleteConnection",
                "title": "Delete Connection",
                "category": "BusDriver",
                "icon": "$(trash)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "busdriver.addConnection",
                    "when": "view == busdriver.connections",
                    "group": "navigation"
                },
                {
                    "command": "busdriver.refresh",
                    "when": "view == busdriver.connections",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "busdriver.deleteConnection",
                    "when": "view == busdriver.connections && viewItem == connection",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "node esbuild.js",
        "watch": "node esbuild.js --watch",
        "package": "node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "dependencies": {
        "@azure/identity": "^4.0.0",
        "@azure/service-bus": "^7.9.0"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.19.10",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    }
}